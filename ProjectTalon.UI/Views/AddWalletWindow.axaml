<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ProjectTalon.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProjectTalon.UI.Views.AddWalletWindow"
        WindowStartupLocation="CenterScreen"
        Title="Add Wallet"
        Icon="/Assets/avalonia-logo.ico">

    <Design.DataContext>
        <vm:AddWalletViewModel/>
    </Design.DataContext>
    
    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <StackPanel Margin="40" VerticalAlignment="Center">
            <StackPanel IsVisible="{Binding ShowGenerate}">
                <TextBlock TextAlignment="Center">Generate</TextBlock>
            </StackPanel>
        </StackPanel>
    </Panel>
</Window>
