<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="700"
             x:Class="ProjectTalon.UI.Views.AddWalletWizardViews.EnterMnemonicView"
             xmlns:vm="using:ProjectTalon.UI.ViewModels.AddWalletWizardViewModels">

    <Design.DataContext>
        <vm:EnterMnemonicViewModel/>
    </Design.DataContext>
    
    <Panel>
        <StackPanel Classes="WizardItemContainer">
            <Label Classes="WizardHeader">Enter Phrase</Label>
        
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <!-- Row 1 -->
                <Border Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">1.</Label>
                        <TextBox Grid.Column="1" Name="Word1" />
                    </Grid>
                </Border>
                <Border Grid.Column="1" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">2.</Label>
                        <TextBox Grid.Column="1" Name="Word2" />
                    </Grid>
                </Border>
                <Border Grid.Column="2" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">3.</Label>
                        <TextBox Grid.Column="1" Name="Word3" />
                    </Grid>
                </Border>
                <Border Grid.Column="3" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">4.</Label>
                        <TextBox Grid.Column="1" Name="Word4" />
                    </Grid>
                </Border>
                
                <!-- Row 2-->
                <Border Grid.Row="1" Grid.Column="0" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">5.</Label>
                        <TextBox Grid.Column="1" Name="Word5" />
                    </Grid>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">6.</Label>
                        <TextBox Grid.Column="1" Name="Word6" />
                    </Grid>
                </Border>
                <Border Grid.Row="1" Grid.Column="2" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">7.</Label>
                        <TextBox Grid.Column="1" Name="Word7" />
                    </Grid>
                </Border>
                <Border Grid.Row="1" Grid.Column="3" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">8.</Label>
                        <TextBox Grid.Column="1" Name="Word8" />
                    </Grid>
                </Border>
                
                <!-- Row 3 -->
                <Border Grid.Row="2" Grid.Column="0" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">9.</Label>
                        <TextBox Grid.Column="1" Name="Word9" />
                    </Grid>
                </Border>
                <Border Grid.Row="2" Grid.Column="1" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">10.</Label>
                        <TextBox Grid.Column="1" Name="Word10" />
                    </Grid>
                </Border>
                <Border Grid.Row="2" Grid.Column="2" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">11.</Label>
