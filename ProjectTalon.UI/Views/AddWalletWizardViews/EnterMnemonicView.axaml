                    </Grid>
                </Border>
                <Border  Grid.Row="4" Grid.Column="2" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
