                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">12.</Label>
                        <TextBox Grid.Column="1" Name="Word12" />
                    </Grid>
                </Border>
                
                <!-- Row 4-->
                <Border  Grid.Row="3" Grid.Column="0" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">13.</Label>
                        <TextBox Grid.Column="1" Name="Word13" />
                    </Grid>
                </Border>
                <Border Grid.Row="3" Grid.Column="1" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">14.</Label>
                        <TextBox Grid.Column="1" Name="Word14" />
                    </Grid>
                </Border>
                <Border Grid.Row="3" Grid.Column="2" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">15.</Label>
                        <TextBox Grid.Column="1" Name="Word15" />
                    </Grid>
                </Border>
                <Border Grid.Row="3" Grid.Column="3" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">16.</Label>
                        <TextBox Grid.Column="1" Name="Word16" />
                    </Grid>
                </Border>
                
                <!-- Row 5 -->
                <Border Grid.Row="4" Grid.Column="0" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">17.</Label>
                        <TextBox Grid.Column="1" Name="Word17" />
                    </Grid>
                </Border>
                <Border Grid.Row="4" Grid.Column="1" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
