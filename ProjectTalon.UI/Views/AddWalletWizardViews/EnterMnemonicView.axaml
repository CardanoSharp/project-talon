                    </Grid>
                </Border>
                <Border Grid.Row="5" Grid.Column="1" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">22.</Label>
                        <TextBox Grid.Column="1" Name="Word22" />
                    </Grid>
                </Border>
                <Border Grid.Row="5" Grid.Column="2" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">23.</Label>
                        <TextBox Grid.Column="1" Name="Word23" />
                    </Grid>
                </Border>
                <Border Grid.Row="5" Grid.Column="3" Classes="Card" Padding="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition  />
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label VerticalAlignment="Center">24.</Label>
                        <TextBox Grid.Column="1" Name="Word24" />
                    </Grid>
                </Border>
            </Grid>
            
            <Border Classes="Card"
                    Background="#FFD3A8">
                <StackPanel>
                    <Label>Instructions</Label>
                    <Label>Please enter your recovery phrase in the correct order to continue.</Label>
                </StackPanel>
            </Border>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" 
                        Command="{Binding Previous}"
                        Margin="10">Back</Button>
                <Button Grid.Column="1" 
                        IsEnabled="{Binding Match}"
                        Command="{Binding Next}"
                        Margin="10">Next</Button>
            </Grid>
        </StackPanel>
    </Panel>
</UserControl>
