@code {

    protected override async Task OnInitializedAsync()
    {
        if (await ViewModel.GetWalletCount() > 0)
        {
            await ViewModel.FetchDashBoard();
        }else
        {
            ViewModel.GoTo("new-wallet");
        }

        ViewModel.PropertyChanged += (o, e) => StateHasChanged();
    }

    
    private List<TransactionSubmitOutputRequest> GetOutput(TransactionRequest transactionRequest) =>
        JsonConvert.DeserializeObject<List<TransactionSubmitOutputRequest>>(
            (JsonConvert.DeserializeObject<Dictionary<string, object>> (transactionRequest.Parameters))["Outputs"].ToString());

    private string GetMetadata(TransactionRequest transactionRequest) =>
        (JsonConvert.DeserializeObject<Dictionary<string, object>> (transactionRequest.Parameters)["Metadata"])?.ToString();
}

