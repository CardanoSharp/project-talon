<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProjectTalon.Maui.ViewModels"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             x:Class="ProjectTalon.Maui.Views.DemoChartView">
    <ContentView.BindingContext>
        <vm:DemoChartViewModel />
    </ContentView.BindingContext>

    <ContentView.Content>
        <chart:SfCircularChart>
            <chart:SfCircularChart.Title>
                <Label Text="PRODUCT SALES"/>
            </chart:SfCircularChart.Title>
            <chart:SfCircularChart.BindingContext>
                <vm:DemoChartViewModel/>
            </chart:SfCircularChart.BindingContext>
            <chart:SfCircularChart.Legend>
                <chart:ChartLegend/>
            </chart:SfCircularChart.Legend>
            <chart:PieSeries ItemsSource="{Binding Data}" ShowDataLabels="True" XBindingPath="Product" EnableTooltip="True" YBindingPath="SalesRate"/>
        </chart:SfCircularChart>
    </ContentView.Content>
</ContentView>
